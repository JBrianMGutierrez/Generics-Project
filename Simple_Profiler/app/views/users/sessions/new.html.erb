<% provide(:title, "Log in") %>
<div class="row" style="margin-top:20px">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset>
        <h2>Please Log In</h2>
        <hr class="colorgraph">
        <div class="form-group">
          <%= f.text_field :login, autofocus: true, placeholder: 'Username or Email', class: 'form-control input-lg' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control input-lg' %>
        </div>
        <span class="button-checkbox">
          <% if devise_mapping.rememberable? -%>
					<button type="button" class="btn" data-color="info">Remember Me</button>
            <%= f.check_box :remember_me , checked: 'checked', class: 'btn hidden', type: 'button' %>
          <% end -%>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-link pull-right' %><br/>
				</span>
        <hr class="colorgraph">
        <div class="row">
          <div class="col-xs-4 col-sm-4 col-md-4">
            <%= f.submit "Log in",  class: 'btn btn-lg btn-success btn-block' %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
