<hr class="colorgraph">
<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="form-group">
      <%= f.text_field :first_name, autofocus: true, class: 'form-control input-lg', placeholder: 'First Name' %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="form-group">
      <%= f.text_field :last_name, autofocus: true, class: 'form-control input-lg', placeholder: 'Last Name' %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.text_field :username, autofocus: true, class: 'form-control input-lg', placeholder: 'Username' %>
</div>
<div class="form-group">
  <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control input-lg', placeholder: 'Email Address' %>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="form-group">
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control input-lg', placeholder: 'Password' %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control input-lg', placeholder: 'Confirm Password' %>
    </div>
  </div>
</div>
