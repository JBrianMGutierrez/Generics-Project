<% provide(:title, "Edit") %>
<h1>Profiles#edit</h1>
<div class=" row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @profile, url: edit_profile_path(current_user.profile) do |f| %>
      <%= render 'profiles/shared/error_messages' %>
      <%= render :partial => 'profiles/shared/fields', :locals => { :f => f } %>
      <div class="row">
        <div class="col-xs-12 col-md-6"><%= f.submit 'Submit', class: 'btn btn-primary' %></div>
      </div>
    <% end %>
  </div>
</div>
