<% provide(:title, "Accomplishment") %>
<h1>Accomplishment#new</h1>
<div class=" row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @accomplishment, url: new_accomplishment_path do |f| %>
      <%= render 'accomplishments/shared/error_messages' %>
      <%= render :partial => 'accomplishments/shared/fields', :locals => { :f => f } %>
      <%= f.fields_for :pictures do |p| %>
        <div class="form-group center">
          <%= p.label :award_picture %><br>
          <span class="btn btn-default btn-file">
            <%= p.file_field :award_picture, :multiple => true, name: "pictures[award_picture][]" %>
          </span>
        </div>
      <% end %>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-md-6"><%= f.submit 'Submit', class: 'btn btn-primary' %></div>
      </div>
    <% end %>
  </div>
</div>
