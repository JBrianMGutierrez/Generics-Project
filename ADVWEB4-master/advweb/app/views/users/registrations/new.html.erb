<% provide(:title, "Sign up")%>
<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <section>
      <div class="panel panel-default top caja">
        <div class="panel-body">
          <h2 class="text-center">Sign up</h2>
          <br>
          <%= form_for(resource, as: resource_name, url: sign_up_path) do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.text_field :first_name, class: 'form-control', :placeholder => 'First name', id: 'first_name' %>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.text_field :last_name, class: 'form-control', :placeholder => 'Last name', id: 'last_name' %>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.text_field :age, class: 'form-control', :placeholder => 'Age', id: 'age' %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.text_field :username, autofocus: true, class: 'form-control', :placeholder => 'Username', id: 'username' %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', :placeholder => 'Email', id: 'email' %>
            </div>

            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', :placeholder => 'Password', id: 'password' %>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', :placeholder => 'Confirm Password', id: 'password_confirmation' %>
                </div>
              </div>
            </div>
            <br>
            <%= f.submit 'Submit Report', class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
</div>

