<% provide(:title, "Home")%>
<div class="jumbotron" style="background: rgba(245,245,245,0.7)">
  <h4 class="center" style="color:#272287; text-align: center"> R E P O R T S (<%= @reports.count %>)</h4>
  <% if @reports.any? %>
    <% @reports.each do |reports|%>
      <div id = "report-link">
        <%= link_to report_path(reports) do %>
          <h3><%= reports.report_title %></h3>
          <small><%= reports.report_date %></small>
          <%= reports.report_description%> <br><br>
        <% end %>
      </div>
    <% end %>
    <%= will_paginate @reports %>
<% else %>
  <% end %>
</div>
