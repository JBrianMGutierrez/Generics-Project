<legend class="text-center"><h3 style="color:#272287">R E P O R T &nbsp; A &nbsp; S C E N E</h3></legend>
<fieldset>
  <legend><h4 style="color:#808080; text-align: center">R e p o r t &nbsp; D e t a i l s</h4></legend>

  <div class="form-group col-md-6">
    <%= f.label :'Title' %>
    <%= f.text_field :report_title, class: 'form-control', :placeholder => 'Title of your Report', id: 'report_title' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :'Date' %>
    <div class='input-group date' id = 'datetimepicker1'>
      <%= f.text_field :report_date, class: 'form-control',class: 'form-control form_datetime' %>
      <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
    </div>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :'Location' %>
    <%= f.text_field :report_location, class: 'form-control', :placeholder => 'Location' %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :'Description' %>
    <%= f.text_area :report_description, class: 'form-control', :placeholder => 'Description' %>
  </div>

</fieldset>

<fieldset>
  <legend>Pictures</legend>
  <div class="form-group col-md-6">
    <%= f.fields_for :photos do |p| %>
      <div class="field">
        <%= p.file_field :picture, class: 'form-control', :multiple => true, name: "photos[picture][]" %>
      </div>
    <% end %>
  </div>
</fieldset>

<div class="form-group">
  <div class="col-md-12">
    <%= f.submit 'Submit Report', class: 'btn btn-primary' %>
  </div>
</div>